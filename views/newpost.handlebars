<div class="row justify-content-center">
    <div class="card col-10 p-0">
        <div class="card-header text-white bg-dark">
            <h4 class="card-title">New Blog Post</h4>
        </div>
        <div class="card-body">
            <form class="form new-post-form">
                <div class="form-group">
                    <label for="new-title">Post Title:</label>
                    <input class="form-input" type="text" id="new-title" />
                </div>
                <div class="input-group">
                    <span class="input-group-text" id="inputGroup-sizing-lg">Write away</span>
                    <textarea class="form-control" id="new-body" aria-label="With textarea"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Post!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/newpost.js"></script>