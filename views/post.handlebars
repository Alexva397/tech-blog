<div class="row justify-content-center">
    <div class="card col-10 p-0 m-1">
        <div class="card-header text-white bg-dark">
            <h4 class="card-title">{{post.title}}</h4>
        </div>
        <div class="card-body">
            <h5>{{post.user.username}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{format_date post.createdAt}}</h6>
            <p class="card-text">{{post.body}}</p>
        </div>
    </div>
</div>

{{#if post.comments.length}}
    <div class="row justify-content-center m-2">
        <div class="card col-6 p-0 m-1">
            <div class="card-header text-white bg-dark">
                <h5>Comments</h5>
            </div>
        </div>

    {{#each post.comments as |comment| }}
        <div class="card col-6 p-0 m-1">
            <div class="card-header">
                <h5>{{comment.user.username}}</h5>
            </div>
            <div class="card-body">
                <h6>Date: {{format_date comment.createdAt}}</h6>
                <h6>{{comment.body}}</h6>
            </div>
        </div>
    {{/each}}
    </div>
{{/if}}

    <div class="row justify-content-center">
        <div class="card col-6 p-0 m-1">
            <div class="card-header">
                <h5>Add a comment</h5>
            </div>
            <div class="card-body">
                <form id="comment">
                    <div class="form-group">
                        <label for="comment">Comment:</label>
                        <textarea class="form-control" id="comment-body" placeholder="Start Here.." rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success mt-2">Add Comment</button>
                </form>
            </div>

        </div>
    </div>


<script src="/js/newcomment.js"></script>