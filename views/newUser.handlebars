<div class="row justify-content-center m-2">
    <div class="card border-dark col-6 p-0">
        <div class="card-header text-center text-white bg-dark">
            <h1 class="card-title">Sign Up</h1>
        </div>
        <div class="card-body card-main text-center">
            <form class="form newuser-form m-3">
                <div class="form-group mb-3">
                    <label class="form-label" for="username">Username:</label>
                    <input class="form-input" type="text" id="username-new" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="email">Email:</label>
                    <input class="form-input" type="text" id="email-new" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="password-new">Password:</label>
                    <input class="form-input" type="password" id="password-new" />
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-dark" type="submit">Sign Up</button>
                </div>
            </form>
            <div>
                <h5>Already a user?</h5>
                <a class="text-success" href="/login">Login</a>
            </div>
        </div>
    </div>
</div>

<script src="/js/newuser.js"></script>