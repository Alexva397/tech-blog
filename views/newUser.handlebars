<div class="row">
    <div class="col-md-6">
        <h2>Sign Up</h2>
        <form class="form newuser-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-input" type="text" id="username-new" />
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input class="form-input" type="text" id="email-new" />
            </div>
            <div class="form-group">
                <label for="password-new">Password:</label>
                <input class="form-input" type="password" id="password-new" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Sign Up</button>
            </div>
        </form>
        <div>
            <h5>Already a user?</h5>
            <a href="/login">Login</a>
        </div>
    </div>
</div>

<script src="/js/newuser.js"></script>