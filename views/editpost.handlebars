<div class="row justify-content-center">
    <div class="col-10 text-center mb-3">
        <h1>Edit Post</h1>
    </div>
</div>


<div class="row justify-content-center">
    <div class="card border-dark card-main col-10 p-3">
        <form class="form edit-form">
            <div class="form-group mb-3">
                <label class="form-label" for="edit-title">Title:</label>
                <textarea class="form-control" id="edit-title" rows="1">{{post.title}}</textarea>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" for="edit-body">Post:</label>
                <textarea class="form-control" id="edit-body" rows="6">{{post.body}}</textarea>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-success" type="submit">Confirm Edit</button>
                <button id="delete-button" type="button" class="btn btn-danger" post-id="{{post.id}}">Delete Post</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/editpost.js"></script>
