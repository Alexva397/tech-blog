<div class="row justify-content-center m-2">
    <div class="card border-dark col-6 p-0">
        <div class="card-header text-center text-white bg-dark">
            <h1 class="card-title">Login</h1>
        </div>
        <div class="card-body card-main text-center">
            <form class="form login-form m-3">
                <div class="form-group mb-3">
                    <label class="form-label" for="email-login">Email:</label>
                    <input class="form-control" type="text" id="email-login" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="password-login">Password:</label>
                    <input class="form-control" type="password" id="password-login" />
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-dark" type="submit">Login</button>
                </div>
            </form>
            <div>
                <h5>Not A User?</h5>
                <a class="text-success" href="/newuser">Click here to create an account!</a>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>